# Ejemplo de archivo terraform.tfvars para AKS Cluster
# Copia este archivo a terraform.tfvars y ajusta los valores

# Azure Configuration
location            = "East US 2"
resource_group_name = "rg-k8s-azure"

# Cluster Configuration
cluster_name       = "k8s-azure"
dns_prefix         = "k8s-azure"
kubernetes_version = "1.28"

# Node Pool Configuration
node_count   = 2
node_vm_size = "Standard_B2s"  # 2 vCPU, 4GB RAM

# Para m√°s recursos, considera:
# node_vm_size = "Standard_D2s_v3"  # 2 vCPU, 8GB RAM
# node_vm_size = "Standard_D4s_v3"  # 4 vCPU, 16GB RAM

# Tags
tags = {
  Project     = "Multinube-K8s"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Cluster     = "AKS"
  Owner       = "YourName"
}
